@{
    ViewData["Title"] = "Home Page";
}
@model List<Chef>

<div class="head">
    <a asp-action="Index">
        <h1>Chefs</h1>
    </a>
    <h1>|</h1> <a asp-action="Dishes">
        <h1>Dishes</h1>
    </a>
</div>
<a class="align" asp-action="ViewAddChef">Add a Chef</a>
<h1 class="border-bottom border-dark">Check out our roster of Chefs!</h1>
<table class="table table-dark table-striped mt-4">
    <tr>
        <th>Name</th>
        <th>Age</th>
        <th># of Dishes</th>
    </tr>
    @{
        foreach (Chef chef in Model)
        {
            int age = DateTime.Now.Year - chef.Birthday.Year;
            <tr>
                <td>@chef.FirstName @chef.LastName</td>
                <td>@age</td>
                <td>@chef.CreatedDishes.Count</td>
            </tr>
        }
    }
</table>
