@{
    ViewData["Title"] = "Home Page";
}
@model List<Dish>
<div class="head">
    <a asp-action="Index">
        <h1>Chefs</h1>
    </a>
    <h1>|</h1> <a asp-action="Dishes">
        <h1>Dishes</h1>
    </a>
</div>
    <a class="align" asp-action="ViewAddDish">Add a Dish</a>
<h1 class="border-bottom border-dark">Yum, take a look at our tasty dishes!</h1>
<table class="table table-dark table-striped mt-4">
    <tr>
        <th>Name</th>
        <th>Chef</th>
        <th>Tastiness</th>
        <th>Calories</th>
    </tr>
    @foreach (Dish dish in Model)
    {
    <tr>
        <td>@dish.Name</td>
        <td>@dish.Creator.FirstName @dish.Creator.LastName</td>
        <td>@dish.Tastiness</td>
        <td>@dish.Calories</td>
    </tr>
    }
</table>
